<UserControl x:Class="HapcanProgrammer.Views.DeviceList.Compact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HapcanProgrammer.Views.DeviceList"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView x:Name="Devices" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="{DynamicResource Accent2Brush}" >
                        <Run Text="{Binding Description}" Foreground="{DynamicResource TextColor}" /> (<Run Text="{Binding ModuleNumber}" />, <Run Text="{Binding GroupNumber}" />)
                    </TextBlock>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
