<UserControl x:Class="HapcanProgrammer.Views.DeviceList.Compact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HapcanProgrammer.Views.DeviceList"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView x:Name="Devices" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!--<Button Content="Remove"
                                cal:Message.Attach="Remove($dataContext)" />-->
                        <TextBlock Text="{Binding Description}" />
                        <TextBlock Text="{Binding SerialNumber}" />
                        <TextBlock Text="{Binding ApplicationType}" Margin="10,0,0,0" />
                        <TextBlock Text="{Binding ModuleNumber}" Margin="20,0,0,0" />
                        <TextBlock Text="{Binding GroupNumber}" Margin="10,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
